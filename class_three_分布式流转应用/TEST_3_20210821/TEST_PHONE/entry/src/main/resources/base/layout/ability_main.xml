<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:text="手机应用"
        ohos:text_size="40vp"
        />

    <Button
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="迁移页面"
        ohos:text_size="40vp"
        ohos:id="$+id:continue_ability"/>

    <Button
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="启动平板的应用"
        ohos:text_size="40vp"
        ohos:id="$+id:start_tv_app"/>

    <Button
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="绑定平板的服务"
        ohos:text_size="40vp"
        ohos:id="$+id:bind_tv_service"/>

    <Button
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="断开平板的服务"
        ohos:text_size="40vp"
        ohos:id="$+id:disconnect_tv_service"/>

</DirectionalLayout>